<div class="container my-3 mx-auto d-flex flex-column align-items-center text-white">
  <h3>New watchlist</h3>
  <%= simple_form_for(@list) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, :label => 'Give a name to the watchlist' %>
    <%= f.input :photo, as: :file %>
    <%= f.submit :class => "btn btn-secondary" %>
  <% end %>
</div>
